#include <stdio.h>
#include <time.h>





int main ()
{
	srand(time(NULL));
	unsigned int n,s,bomb,m1,m2,n1;	
	unsigned int wrong = 0;
	unsigned int type, level;
	unsigned int type1 [7][7]={};
	unsigned int type2 [11][11]={};
	unsigned int type3 [15][15]={};

	printf("%s\n%s\n%s\n%s\n%s","please choose type of game: "
							,"type 1: 7 * 7"
							,"type 2: 11 * 11"
							,"type 3: 15 * 15"
							,"type : ");
	scanf("%u",&type);

	if(type == 1){
		n = 7 * 7;
		n1 = 7;
	}
	else{
		if(type == 2){
			n = 11 * 11;
			n1 = 11;
		}
		else{
			if(type == 3){
				n = 15 * 15;
				n1 = 15;
			}
			else{	
				while(wrong != 1){
					printf("%s\n%s","you intered wrong number!!!"
									,"please choose again: ");
					scanf("%u",&type);
					if(type == 1 || type == 2 || type == 3)
						wrong = 1;
				}
			}
		}
	}
	wrong = 0;
	printf("%s\n%s\n%s\n%s\n%s","please choose level of game:"
							,"level esey   = 1"
						    ,"level normal = 2"
						    ,"level hard   = 3"
							,"level : ");
	scanf("%u",&level);
	if(level == 1)
		s = 6;
	else{
		if(level == 2)
			s = 5;
		else{
			if(level == 3)
				s = 4;
			else{	
				while(wrong != 1){
					printf("%s\n%s","you intered wrong number!!!"
									,"please choose again: ");
					scanf("%u",&level);
					if(level == 1 || level == 2 || level == 3)
						wrong = 1;
				}
			}
		}
	}//end first part

	bomb = n / s;
	if(type == 1){
		for (int i = 0; i < bomb;i++){
			m1 = rand() % n1;
			m2 = rand() % n1;
			if(type1 [m1][m2] == 0)
				type1 [m1][m2] = 1;
			else{
				i--;
			}
		}
	}
	else{
		if(type == 2){
			for (int i = 0; i < bomb;i++){
				m1 = rand() % n1;
				m2 = rand() % n1;
				if(type2 [m1][m2] == 0)
					type2 [m1][m2] = 1;
				else{
					i--;
				}
			}
		}
		else{
			for (int i = 0; i < bomb;i++){
				m1 = rand() % n1;
				m2 = rand() % n1;
				if(type3 [m1][m2] == 0)
					type3 [m1][m2] = 1;
				else{
					i--;
				}
			}
		}
	}
}
